<h1>New Game</h1>

<ul>
  <% @letters.each do |letter| %>
    <li><%= letter %></li>
  <% end %>
</ul>

<form action="/score" method="post" data-turbo="false">

  <input type="text" name="word" placeholder="Type a word">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag 'letters', @letters_string %>

  <input type="submit">

</form>
